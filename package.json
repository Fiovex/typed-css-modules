{
    "name": "@fiovex/typed-css-modules",
    "version": "1.0.1",
    "description": "Creates .d.ts files from CSS Modules .module.scss files",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "clean": "rimraf lib/",
        "build": "npm run clean && tsc && chmod +x lib/cli.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:ci": "jest --coverage",
        "prepublish": "npm run build"
    },
    "bin": {
        "tcm": "lib/cli.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Fiovex/typed-css-modules.git"
    },
    "keywords": [
        "css-modules",
        "typescript"
    ],
    "author": "Fiovex",
    "license": "MIT",
    "engines": {
        "node": ">=8.0.0"
    },
    "dependencies": {
        "@types/css-modules-loader-core": "^1.1.0",
        "camelcase": "^5.3.1",
        "chalk": "^2.1.0",
        "chokidar": "^3.4.0",
        "css-modules-loader-core": "^1.1.0",
        "glob": "^7.1.2",
        "is-there": "^4.4.2",
        "mkdirp": "^0.5.1",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/jest": "^25.2.1",
        "@types/mkdirp": "^0.5.1",
        "@types/node": "^12.0.8",
        "@types/yargs": "^15.0.4",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "jest": "^25.5.4",
        "prettier": "^2.2.1",
        "ts-jest": "^25.4.0",
        "typescript": "^4.1.3"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(test/.*|(src/.*\\.test))\\.ts$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "\\.d\\.ts$",
            "lib/",
            "example/",
            "coverage/"
        ],
        "moduleFileExtensions": [
            "js",
            "ts",
            "json"
        ]
    }
}
